           <ToggleGroup fx:id="bedroomToggleGroup" />
           <ToggleGroup fx:id="bathroomToggleGroup" />
       </fx:define>
      <RadioButton layoutX="7.0" layoutY="25.0" mnemonicParsing="false" text="1 bedroom" toggleGroup="$bedroomToggleGroup"> </RadioButton>
      <RadioButton layoutX="7.0" layoutY="45.0" mnemonicParsing="false" text="2 bedrooms" toggleGroup="$bedroomToggleGroup" />
      <Label layoutX="7.0" layoutY="5.0" text="Choose your number of bedrooms!" fx:id="test"/>
